<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F8F7FC">

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="246dp"
        android:layout_height="251dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="186dp"
        android:layout_marginTop="-15dp"
        android:layout_marginRight="0dp"
        android:src="@drawable/sign_in_orange" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="105dp"
        android:layout_height="258dp"
        android:layout_alignTop="@+id/imageView1"
        android:layout_marginTop="258dp"
        android:src="@drawable/sign_in_blue" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="381dp"
        android:layout_height="56dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="254dp"
        android:background="@drawable/shape_shadow_edt"
        >

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/user"/>

        <EditText
            android:id="@+id/loginET"
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:ems="10"
            android:hint="Login"
            android:inputType="textEmailAddress"
            android:singleLine="true"
            android:textAlignment="center"
            android:textColorHint="#000"

            />
    </LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="381dp"
        android:layout_height="56dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="320dp"
        android:background="@drawable/shape_shadow_edt"
        >

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_weight="1"
            app:srcCompat="@android:drawable/ic_secure" />


        <EditText
            android:id="@+id/passwordET"
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:ems="10"
            android:hint="Password"
            android:inputType="textEmailAddress"
            android:singleLine="true"
            android:textAlignment="center"
            android:textColorHint="#000"
            />
    </LinearLayout>


    <Button
        android:id="@+id/loginBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="300dp"
        android:layout_marginTop="436dp"
        android:background="@drawable/orange_btn_rounded_grad"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="LOGIN"
        android:textSize="26dp" />

</RelativeLayout>